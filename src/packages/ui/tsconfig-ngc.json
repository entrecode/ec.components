{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "declaration": true,
    "outDir": "./lib",
    "stripInternal": true
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
    "./index.ts"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  }
}