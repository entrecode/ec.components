{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "declaration": true,
    "outDir": "./lib",
    "noEmit": true,
    "stripInternal": true,
    "baseUrl": "./",
    "paths": {
      "@angular/*": [
        "node_modules/@angular/*"
      ],
      "@ec.components/*": [
        "node_modules/@ec.components/*"
      ],
      "ec.sdk/*": [
        "node_modules/ec.sdk/*"
      ],
      "ec.sdk": [
        "node_modules/ec.sdk"
      ]
    }
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  }
}