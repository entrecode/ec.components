{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@ec.components/calendar": [
        "dist/calendar"
      ],
      "@ec.components/calendar/*": [
        "dist/calendar/*"
      ],
      "@ec.components/core": [
        "dist/core"
      ],
      "@ec.components/core/*": [
        "dist/core/*"
      ],
      "@ec.components/ui": [
        "dist/ui"
      ],
      "@ec.components/ui/*": [
        "dist/ui/*"
      ],
      "@ec.components/data": [
        "dist/data"
      ],
      "@ec.components/data/*": [
        "dist/data/*"
      ],
      "@ec.components/ace": [
        "dist/ace"
      ],
      "@ec.components/ace/*": [
        "dist/ace/*"
      ],
      "@ec.components/tinymce": [
        "dist/tinymce"
      ],
      "@ec.components/tinymce/*": [
        "dist/tinymce/*"
      ],
      "@ec.components/medium-editor": [
        "dist/medium-editor"
      ],
      "@ec.components/medium-editor/*": [
        "dist/medium-editor/*"
      ],
      "location": [
        "dist/location"
      ],
      "location/*": [
        "dist/location/*"
      ]
    }
  }
}