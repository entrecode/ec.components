{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "@ec.components/calendar": ["packages/calendar/dist"],
      "@ec.components/calendar/*": ["packages/calendar/dist/*"],
      "@ec.components/core": ["packages/core/dist"],
      "@ec.components/core/*": ["packages/core/dist/*"],
      "@ec.components/ui": ["packages/ui/dist"],
      "@ec.components/ui/*": ["packages/ui/dist/*"],
      "@ec.components/data": ["packages/data/dist"],
      "@ec.components/data/*": ["packages/data/dist/*"],
      "@ec.components/ace": ["packages/ace/dist"],
      "@ec.components/ace/*": ["packages/ace/dist/*"],
      "@ec.components/tinymce": ["packages/tinymce/dist"],
      "@ec.components/tinymce/*": ["packages/tinymce/dist/*"],
      "@ec.components/medium-editor": ["packages/medium-editor/dist"],
      "@ec.components/medium-editor/*": ["packages/medium-editor/dist/*"],
      "location": ["packages/location/dist"],
      "location/*": ["packages/location/dist/*"]
    }
  }
}
