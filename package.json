{
  "name": "ec.components",
  "description": "ec.components is a modular atomic ui system. It consists of core typescript classes, angular ui components and specific components designed for the entrecode datamanager.",
  "version": "0.10.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "npm run symlinks && npm run delete-modules && ng serve --ssl --aot --port 1337",
    "aot": "npm run symlinks && npm run delete-modules && ng serve --aot --ssl",
    "build": "ng build --env=prod --aot=false -sm",
    "test": "ng test --cc",
    "lint": "ng lint",
    "symlinks": "sh ./symlinks.sh",
    "bootstrap": "lerna bootstrap",
    "delete-modules": "sh ./delete-modules.sh",
    "publish": "lerna publish",
    "e2e": "ng e2e",
    "sloc": "sloc packages --format json > sloc.json",
    "docs": "compodoc packages -d docs -p tsconfig.json --includes tutorial --includesName Tutorial",
    "docs-serve": "compodoc packages -d docs -p tsconfig.json --serve --watch"
  },
  "private": true,
  "dependencies": {
    "@angular/compiler": "^5.0.1",
    "@angular/core": "^5.0.1",
    "@angular/forms": "^5.0.1",
    "@angular/http": "^5.0.1",
    "@angular/platform-browser": "^5.0.1",
    "@angular/platform-browser-dynamic": "^5.0.1",
    "@angular/router": "^5.0.1",
    "@ec.components/data": "*",
    "@ec.components/medium-editor": "*",
    "@ec.components/style": "*",
    "@ec.components/tinymce": "*",
    "core-js": "^2.5.1",
    "ec.sdk": "^0.11.1",
    "moment": "^2.19.1",
    "ngx-cookie": "^1.0.1",
    "rxjs": "^5.5.2",
    "stream": "0.0.2",
    "x.ui": "^6.0.1",
    "xlcss": "^5.0.1",
    "zone.js": "^0.8.18",
    "tinymce": "^4.7.2",
    "ace-builds": "^1.2.9"
  },
  "devDependencies": {
    "@angular/cli": "1.5.0",
    "@angular/compiler-cli": "^5.0.1",
    "@compodoc/compodoc": "^1.0.4",
    "@types/jasmine": "^2.6.3",
    "@types/node": "^8.0.50",
    "codelyzer": "^4.0.1",
    "jasmine-core": "^2.8.0",
    "jasmine-spec-reporter": "^4.2.1",
    "karma": "^1.7.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "~1.0.1",
    "karma-coverage": "^1.1.1",
    "karma-coverage-istanbul-reporter": "^1.3.0",
    "karma-jasmine": "^1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "lerna": "^2.5.1",
    "protractor": "~5.2.0",
    "sinon": "^4.1.2",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "typescript": ">=2.4.2 <2.5.0",
    "visual-cms.core": "git+https://github.com/entrecode/visual-cms.core.git#feature/VCMS-74"
  }
}
