{
  "name": "ec.components",
  "description": "ec.components is a modular atomic ui system. It consists of core typescript classes, angular ui components and specific components designed for the entrecode datamanager.",
  "version": "0.7.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "npm run symlinks && npm run delete-modules && ng serve --ssl --port 1337",
    "aot": "npm run symlinks && npm run delete-modules && ng serve --aot --ssl",
    "build": "ng build --prod --env=prod",
    "test": "ng test --cc",
    "lint": "ng lint",
    "symlinks": "sh ./symlinks.sh",
    "bootstrap": "lerna bootstrap",
    "delete-modules": "sh ./delete-modules.sh",
    "publish": "lerna publish",
    "e2e": "ng e2e",
    "sloc": "sloc packages --format json > sloc.json",
    "docs": "compodoc packages -d docs -p tsconfig.json --includes tutorial --includesName Tutorial",
    "docs-serve": "compodoc packages -d docs -p tsconfig.json --serve --watch"
  },
  "private": true,
  "dependencies": {
    "@angular/compiler": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/forms": "^4.0.0",
    "@angular/http": "^4.0.0",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0",
    "@angular/router": "^4.0.0",
    "@ec.components/data": "^0.6.9",
    "@ec.components/style": "^0.6.6",
    "@ec.components/medium-editor": "^0.0.1",
    "core-js": "^2.4.1",
    "ec.sdk": "^0.8.9",
    "moment": "^2.18.1",
    "ngx-cookie": "^1.0.0",
    "rxjs": "^5.1.0",
    "stream": "0.0.2",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "@angular/cli": "^1.0.1",
    "@angular/compiler-cli": "^4.0.0",
    "@compodoc/compodoc": "^1.0.0-beta.14",
    "@types/jasmine": "^2.5.47",
    "@types/node": "^6.0.71",
    "codelyzer": "^3.2.0",
    "jasmine-core": "^2.6.1",
    "jasmine-spec-reporter": "^4.1.0",
    "karma": "^1.6.0",
    "karma-chrome-launcher": "^2.1.0",
    "karma-cli": "~1.0.1",
    "karma-coverage": "^1.1.1",
    "karma-coverage-istanbul-reporter": "^1.2.0",
    "karma-jasmine": "^1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "lerna": "^2.1.2",
    "protractor": "~5.1.0",
    "sinon": "^2.2.0",
    "ts-node": "^3.0.2",
    "tslint": "^5.1.0",
    "typescript": "^2.3.4"
  }
}
