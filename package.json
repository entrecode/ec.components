{
  "name": "ec.components",
  "description": "ec.components is a modular atomic ui system. It consists of core typescript classes, angular ui components and specific components designed for the entrecode datamanager.",
  "version": "0.12.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "npm run symlinks && npm run delete-modules && ng serve --ssl --aot --port 1337",
    "aot": "npm run symlinks && npm run delete-modules && ng serve --aot --ssl",
    "build": "ng build --prod --env=prod  --aot=true --source-map",
    "test": "ng test --cc",
    "lint": "ng lint",
    "symlinks": "sh ./symlinks.sh",
    "bootstrap": "lerna bootstrap",
    "delete-modules": "sh ./delete-modules.sh",
    "changelog": "conventional-changelog -i CHANGELOG_.md -s",
    "publish": "lerna publish",
    "e2e": "ng e2e",
    "sloc": "sloc packages --format json > sloc.json",
    "docs": "compodoc packages -d docs -p tsconfig.json --includes tutorial --includesName Tutorial",
    "docs-serve": "compodoc packages -d docs -p tsconfig.json --serve --watch"
  },
  "private": true,
  "dependencies": {
    "@angular/compiler": "^6.0.1",
    "@angular/common": "^6.0.1",
    "@angular/core": "^6.0.1",
    "@angular/forms": "^6.0.1",
    "@angular/http": "^6.0.1",
    "@angular/platform-browser": "^6.0.1",
    "@angular/platform-browser-dynamic": "^6.0.1",
    "@angular/router": "^6.0.1",
    "@ec.components/data": "*",
    "@ec.components/medium-editor": "*",
    "@ec.components/style": "*",
    "@ec.components/tinymce": "*",
    "ace-builds": "^1.2.9",
    "core-js": "^2.5.3",
    "ec.sdk": "^0.16.1",
    "moment-es6": "^1.0.0",
    "ngx-cookie": "^2.0.1",
    "rxjs": "^6.0.0",
    "stream": "0.0.2",
    "tinymce": "^4.7.6",
    "x.ui": "^8.0.0-beta.4",
    "zone.js": "^0.8.20"
  },
  "devDependencies": {
    "@angular/cli": "^6.0.1",
    "@angular/compiler-cli": "^6.0.1",
    "@compodoc/compodoc": "^1.1.2",
    "@types/jasmine": "^2.8.6",
    "@types/node": "^9.4.0",
    "ajv": "^6.5.0",
    "codelyzer": "^4.1.0",
    "conventional-changelog-cli": "^1.3.8",
    "jasmine-core": "^2.9.1",
    "jasmine-spec-reporter": "^4.2.1",
    "karma": "^2.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "~1.0.1",
    "karma-coverage": "^1.1.1",
    "karma-coverage-istanbul-reporter": "^1.4.1",
    "karma-jasmine": "^1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "lerna": "^2.8.0",
    "ng-packagr": "^2.4.4",
    "protractor": "~5.3.0",
    "sinon": "^4.2.2",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "typescript": ">=2.7.2 <2.8",
    "visual-cms.core": "git+https://github.com/entrecode/visual-cms.core.git#feature/VCMS-74",
    "@angular-devkit/build-angular": "~0.6.1"
  }
}
